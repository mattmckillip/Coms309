<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp" >
        
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/findStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="0"
            android:text="Find Cheapest Store"
            android:textColor="#FFFFFF" />

        <Button 
            android:id="@+id/sortList"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dp"
        	android:layout_weight="0"
        	android:textColor="#FFFFFF"
        	android:text="Sort List" />
    
	</LinearLayout>
	
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="357dp"
        android:layout_weight="1.10"
        android:choiceMode="multipleChoice"
        android:dividerHeight="2dp" />

    <Button
        android:id="@+id/inputPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_weight="0"
        android:textColor="#FFFFFF"
        android:text="Add Item" />

    <Button
        android:id="@+id/selectStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_weight="0"
        android:text="Select Store"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/deleteAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_weight="0"
        android:textColor="#FFFFFF"
        android:text="Delete All Items"/>
       

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:minHeight="20dp"
    android:clickable="true"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="20dp"
        android:orientation="vertical">
    	
    	<ImageView
        	android:id="@+id/coupon_image"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:contentDescription="Coupon Image"
        	android:src="@drawable/ic_launcher" />
    
    	<TextView
        	android:id="@+id/coupon_title"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Error loading coupon!"
        	android:textColor="@android:color/white" />
    </LinearLayout>
    
	<ImageView 
	    android:id="@+id/coupon_in_cart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:contentDescription="All items are in cart."
	    android:src="@drawable/ic_add_cart_2"
	    android:layout_gravity="right|center_vertical"
	    android:layout_weight="0.1"
	    android:visibility="invisible" />
</LinearLayout>

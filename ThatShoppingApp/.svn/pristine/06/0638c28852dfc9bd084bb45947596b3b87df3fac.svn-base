<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10dp"
    android:showDividers="none" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <EditText
            android:id="@+id/RemoveInventoryPopUpBarcode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/TextView01" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Product Barcode"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/brand_container"
        android:layout_width="wrap_content"
        android:layout_height="50dp" >
        <TextView
            android:id="@+id/TextView02"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Store ID"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/RemoveInventorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/TextView02"
            android:entries="@array/stores_array" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

	    <Button
	        android:id="@+id/RemoveInventoryConfirm"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_toRightOf="@+id/RemoveInventoryCancel"
	        android:text="Remove" />

        <Button
            android:id="@+id/RemoveInventoryCancel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Cancel" />

    </RelativeLayout>

</LinearLayout>